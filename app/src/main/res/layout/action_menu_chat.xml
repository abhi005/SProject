<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_menu_height">

        <ImageView
            android:id="@+id/chat_action_menu_back_btn"
            android:src="@drawable/action_menu_cancel"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/action_menu_icon_padding"
            android:tint="@color/white"
            android:background="@color/primaryBlue"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/chat_action_menu_forward_btn"
            android:src="@drawable/action_menu_forward"
            android:tint="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/action_menu_icon_padding"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/chat_action_menu_copy_btn"
            android:src="@drawable/action_menu_copy"
            android:tint="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/action_menu_icon_padding"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/chat_action_menu_delete_btn"
            android:src="@drawable/action_menu_delete"
            android:tint="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/action_menu_icon_padding"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/chat_action_menu_details_btn"
            android:src="@drawable/action_menu_info"
            android:tint="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/action_menu_icon_padding"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>