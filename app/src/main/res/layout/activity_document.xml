<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".Document">

    <RelativeLayout
        android:id="@+id/document_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/home_header_gradient"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/back_btn_document"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/heading_tv"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/heading_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/documents"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/menu_btn_document"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/heading_tv"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:src="@drawable/three_dot_menu"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/menu_select_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/heading_tv"
            android:clickable="true"
            android:focusable="true"
            android:padding="18dp"
            android:src="@drawable/checkbox_unchecked"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_toolbar"
        android:background="@drawable/home_header_gradient"
        android:focusableInTouchMode="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <EditText
            android:id="@+id/search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corner"
            android:drawableStart="@drawable/ic_search_white_24dp"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="@string/search"
            android:inputType="textPersonName"
            android:textColor="@color/grey"
            android:textColorHint="@color/lightGrey"
            android:textSize="16sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/document_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar"
        android:background="@color/white"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:id="@+id/document_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <include
            android:id="@+id/document_action_menu"
            layout="@layout/action_menu_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>