<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_menu_height">

        <ImageView
            android:id="@+id/action_menu_back_btn"
            android:src="@drawable/action_menu_cancel"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/action_menu_icon_padding"
            android:tint="@color/white"
            android:background="@color/primaryBlue"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/action_menu_item_count"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/heading"
            android:text="@string/_0_item_selected"
            android:paddingStart="@dimen/action_menu_icon_padding"
            android:paddingEnd="@dimen/action_menu_icon_padding"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/action_menu_delete_btn"
            android:src="@drawable/action_menu_delete"
            android:tint="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/action_menu_icon_padding"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/action_menu_info_btn"
            android:src="@drawable/action_menu_info"
            android:tint="@color/grey"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/action_menu_icon_padding"
            android:layout_width="@dimen/action_menu_height"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>