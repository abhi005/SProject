<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat">

    <RelativeLayout
        android:id="@+id/chat_toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:elevation="0dp"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/back_btn_chat"
            android:layout_alignStart="@+id/person_name_chat"
            android:padding="20dp"
            android:src="@drawable/back_arrow"
            android:scaleType="centerInside"
            android:tint="@color/grey"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="match_parent"
            android:focusable="true" />

        <TextView
            android:text="person name"
            android:id="@+id/person_name_chat"
            android:textSize="18sp"
            android:textColor="@color/darkGrey"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:scrollbars="vertical"
        android:paddingTop="12dp"
        android:layout_below="@+id/chat_toolbar"
        android:layout_above="@+id/chat_bottom_bar"
        android:id="@+id/chat_main_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/chat_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/chat_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp">

            <EditText
                android:id="@+id/chat_message_text"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_toStartOf="@+id/chat_send_btn"
                android:background="@drawable/chat_edittext_white_background"
                android:hint="@string/enter_text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="16dp"
                android:scrollHorizontally="false"
                android:maxLines="2"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/chat_send_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp"
                android:src="@drawable/ic_send_white_24dp" />
        </RelativeLayout>

        <include
            android:id="@+id/chat_action_menu"
            layout="@layout/chat_action_menu"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>