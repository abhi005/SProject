<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_history_item_linear_layout"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:weightSum="1"
        android:padding="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/call_history_item_person_btn"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_circle_white_36dp"
            android:tint="@color/grey"
            android:layout_width="48dp"
            android:layout_marginEnd="18dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:lines="1"
                    android:id="@+id/call_history_item_tv1"
                    android:textColor="@color/darkGrey"
                    android:text="Abhishek Jain"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/call_history_type_icon"
                    android:src="@drawable/call_dialed_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
            </LinearLayout>

            <TextView
                android:text="India"
                android:textColor="@color/grey"
                android:lines="1"
                android:textSize="14sp"
                android:id="@+id/call_history_item_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="4:43 PM "
                android:textColor="@color/grey"
                android:lines="1"
                android:textSize="14sp"
                android:id="@+id/call_history_item_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/call_history_item_cb"
            android:button="@drawable/checkbox_selector"
            android:layout_gravity="center"
            android:visibility="gone"
            android:clickable="false"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>